<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashActivity"
    android:orientation="vertical"
    android:background="#112a3e">

   <ImageView
       android:layout_width="500dp"
       android:layout_height="wrap_content"
       android:layout_gravity="center"
       android:id="@+id/logoPic"
       android:src="@drawable/logo"
       android:layout_marginBottom="0dp"
       android:paddingBottom="0dp"
       />

    <ImageView
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/logoPic2"
        android:src="@drawable/logo2"
        android:layout_marginTop="0dp"
        android:paddingTop="0dp"
        />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Jeffery Cui"
        android:textSize="60dp"
        android:textColor="#ffffff"
        android:id="@+id/name1"
        android:gravity="center"

        />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Jeremy Little"
        android:textSize="60dp"
        android:textColor="#ffffff"
        android:id="@+id/name2"
        android:layout_alignBottom="@id/name1"
        android:gravity="center"
        />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="John Zhang"
        android:textSize="60dp"
        android:textColor="#ffffff"
        android:id="@+id/name3"
        android:gravity="center"
        />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Pam Gregoretti"
        android:textSize="60dp"
        android:textColor="#ffffff"
        android:id="@+id/name4"
        android:gravity="center"
        />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="UVA CS2110 Spring 2015"
        android:textSize="30dp"
        android:textColor="#ffffff"
        android:id="@+id/name5"
        android:gravity="center"/>
</LinearLayout>

