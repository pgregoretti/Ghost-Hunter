<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="jyc2ra.cs2110.virginia.edu.ghost_hunter_app.PlayActivity"
    android:background="@drawable/background2"
    android:weightSum="1"
    android:id="@+id/container">


    <ImageButton
        android:layout_width="48dp"
        android:layout_height="43dp"
        android:id="@+id/soundButton"
        android:src="@drawable/soundimage"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        style="?android:attr/borderlessButtonStyle"
        android:layout_margin="20dp"
        />


    <ImageView
        android:layout_width="150dp"
        android:layout_height="140dp"
        android:src="@drawable/dpad"
        android:layout_alignParentBottom="true"
        android:layout_margin="35dp"
        android:id="@+id/dpad"/>

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/bombbut"
        android:onClick="bomb"
        android:layout_margin="15dp"
        style="?android:attr/borderlessButtonStyle"
        android:id="@+id/imageButton" />

    <ImageView
        android:layout_width="36dp"
        android:layout_height="63dp"
        android:src="@drawable/playerfront"
        android:scaleType="fitXY"
        android:id="@+id/playerFront"
        android:padding="0dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_margin="0dp"/>
    <TextView
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:textColor="@color/white"
        android:layout_alignTop="@+id/imageButton"
        android:layout_toRightOf="@+id/dpad"
        android:layout_toEndOf="@+id/dpad"
        android:textSize="20dp"
        android:id="@+id/scoreCard"/>
    <TextView
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/dpad"
        android:layout_alignLeft="@+id/scoreCard"
        android:layout_alignStart="@+id/scoreCard"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:id="@+id/health"/>

</RelativeLayout>
